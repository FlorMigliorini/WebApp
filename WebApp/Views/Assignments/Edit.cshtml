@model WebApp.Models.Assignment

@{
    ViewBag.Title = "Edit";
}

<div class="row p-4 ">
    <h2 class="text-black-50">Edit</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 class="text-primary">Assignment</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AssignmentID)

        <div class="form-group badge-light">
            @Html.LabelFor(model => model.Job, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Job, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Job, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group badge-light">
            @Html.LabelFor(model => model.DeadLineDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DeadLineDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DeadLineDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group badge-light">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-outline-primary border-bottom p-5s mt-2" />
            </div>
        </div>
    </div>
}

<div class="btn btn-outline-primary border-info">
    @Html.ActionLink("Back to List", "Index")
</div>
